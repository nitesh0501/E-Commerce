 create table cart(
   id int auto_increment primary key,
   userId int not null,
   productIdd int not null,
   
 )
 
 CREATE TABLE cart (
    id int auto_increment primary key,

    user_id int,
    product_id bigint,

    quantity INT DEFAULT 1,

    FOREIGN KEY (user_id) 
        REFERENCES user(id) 
        ON DELETE CASCADE,

    FOREIGN KEY (product_id) 
        REFERENCES products(id) 
        ON DELETE CASCADE
);
create table user(
  id int auto_increment primary key,
  fname varchar(20),
  lname varchar(20),
  emailId varchar(20) unique,
  password varchar(20)
);


 
 
