use  springjdbc;
show tables;
select * from Erode;
drop table Erode;
create database Project;
use  project
create table user(
  id int auto_increment primary key,
  fname varchar(20),
  lname varchar(20),
  emailId varchar(20) unique,
  password varchar(20)
);
drop table user;
select * from user;


CREATE TABLE products (
    id BIGINT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(100),
    description TEXT,
    price DECIMAL(10,2),
    quantity INT,
    category VARCHAR(50),
    image VARCHAR(100)
);

